<div class="card col-xs-12">
  <div class="container-fluid text-center">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to restaurant do %>
          <h2><%= restaurant.name %> </h2>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <p>Address</p>
        <h4><%= restaurant.address %></h4>
      </div>
      <div class="col-xs-6">
        <p>Number</p>
        <h4><%= restaurant.phone_number %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <p>Category</p>
        <h4><%= restaurant.category %></h4>
      </div>
      <div class="col-xs-6">
        <p>Avg Rating</p>
        <h4><%= restaurant.avg_rating %></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <%= link_to edit_restaurant_path(restaurant), class: "btn btn-warning" do %>
        Edit
        <% end %>
      </div>
      <div class="col-xs-6">
        <%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
